@inherits Umbraco.Web.Macros.PartialViewMacroPage

@using ClientDependency.Core.Mvc;
@using Umbraco.Web;

@{
    Html.RequiresCss("~/App_Plugins/PoweredByOprum/Components/dist/my-products/styles.bundle.css");

    Html.RequiresJs("~/App_Plugins/PoweredByOprum/Components/dist/my-products/inline.bundle.js");
    Html.RequiresJs("~/App_Plugins/PoweredByOprum/Components/dist/my-products/polyfills.bundle.js");
    Html.RequiresJs("~/App_Plugins/PoweredByOprum/Components/dist/my-products/vendor.bundle.js");
    Html.RequiresJs("~/App_Plugins/PoweredByOprum/Components/dist/my-products/main.bundle.js");
}

@if (UmbracoContext.IsFrontEndUmbracoRequest)
{
    Html.RenderCssHere();
    <app-my-products></app-my-products>
    Html.RenderJsHere();
}
else
{
    <div class="text-center">
        <div><i class="fa fa-shopping-cart"></i> <span>@Model.MacroName</span></div>
    </div>
}